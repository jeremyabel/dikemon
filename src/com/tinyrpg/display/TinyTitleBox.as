package com.tinyrpg.display{	import com.tinyrpg.display.TinyContentBox;	import com.tinyrpg.managers.TinyFontManager;	import com.tinyrpg.utils.TinyLogManager;	import flash.display.DisplayObject;	import flash.text.TextField;	/**	 * @author jeremyabel	 */	public class TinyTitleBox extends TinyContentBox 	{		private var titleTextField : TextField;				public function TinyTitleBox(content : DisplayObject, title : String, width : uint = 0, height : uint = 0, opaque : Boolean = false)		{			super(content, width, height, opaque);						this.titleTextField = TinyFontManager.returnTextField();			this.titleTextField.x += 1;			this.titleTextField.y -= 2;			this.title = title;			this.addChild(this.titleTextField);		}				public function set title(title : String) : void		{			TinyLogManager.log('set title: ' + title.toUpperCase(), this);			this.titleTextField.htmlText = TinyFontManager.returnHtmlText(title.toUpperCase(), "battleBoxTitle");		}	}}