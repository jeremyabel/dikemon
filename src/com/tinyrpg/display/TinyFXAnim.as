package com.tinyrpg.display {	import com.tinyrpg.display.attacks.enemy.Bite;	import com.tinyrpg.display.attacks.enemy.Claws;	import com.tinyrpg.display.attacks.enemy.FireLoop;	import com.tinyrpg.display.attacks.friend.Hit;	import com.tinyrpg.display.attacks.friend.Rainbow;	import com.tinyrpg.display.attacks.friend.WaterSplash;	import flash.display.BitmapData;	/**	 * @author jeremyabel	 */	public class TinyFXAnim extends TinySpriteSheet	{		public static var E_CLAWS 	: TinyFXAnim = new TinyFXAnim('E_CLAWS', 	new Claws, 41, 2);		public static var E_FIRE	: TinyFXAnim = new TinyFXAnim('E_FIRE',		new FireLoop, 32, 2, true);		public static var F_WATER 	: TinyFXAnim = new TinyFXAnim('F_WATER', 	new WaterSplash, 32, 2);		public static var F_HIT  	: TinyFXAnim = new TinyFXAnim('F_HIT',   	new Hit, 47, 1);		public static var F_BITE  	: TinyFXAnim = new TinyFXAnim('F_BITE',  	new Bite, 44, 2);		public static var F_RAINBOW : TinyFXAnim = new TinyFXAnim('F_RAINBOW',  new Rainbow, 54, 1);		public var attackName : String;				public function TinyFXAnim(name : String, bitmapData : BitmapData, tileSize : uint, speed : uint = 1, loop : Boolean = false)		{			this.attackName = name;			super(bitmapData, tileSize, loop, speed);		}				public static function getAnimFromType(attackType : String) : TinyFXAnim		{			switch (attackType)			{				case 'E_CLAWS':				case 'F_CLAWS':				case 'CLAWS':					return TinyFXAnim.E_CLAWS; break;				case 'RAINBOW':					return TinyFXAnim.F_RAINBOW; break;				case 'FIRE':					return TinyFXAnim.E_FIRE; break;					 				case 'WATER':					return TinyFXAnim.F_WATER; break; 				default:				case 'HIT':				case 'E_HIT':				case 'F_HIT':					return TinyFXAnim.F_HIT; break;			}		}	}}