package com.tinyrpg.ui {	import com.tinyrpg.core.TinyPlayer;	import com.tinyrpg.core.TinyStatsEntity;	import com.tinyrpg.display.TinyQuickStats;	import com.tinyrpg.events.TinyBattleEvent;	import com.tinyrpg.events.TinyInputEvent;	import com.tinyrpg.managers.TinyInputManager;	/**	 * @author jeremyabel	 */	public class TinyGameMenuQuickStats extends TinySelectList 	{		public function TinyGameMenuQuickStats() : void		{			var newItems : Array = [];						// Populate with the current party			for each (var character : TinyStatsEntity in TinyPlayer.getInstance().party.party)				newItems.push(new TinyQuickStats(character));						super('', newItems, 109, 80, 26, 0, 17);		}				override protected function onAccept(event : TinyInputEvent) : void		{			if (!TinyInputManager.getInstance().holdingAccept) {				super.onAccept(event);				this.dispatchEvent(new TinyBattleEvent(TinyBattleEvent.ENEMY_SELECTED, TinyPlayer.getInstance().party.getCharByID(this.selectedItem.idNumber)));			}		}	}}