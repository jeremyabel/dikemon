<?xml version="1.0" encoding="UTF-8"?>
<EVENTS>

	<EVENT_map_setup>
		<SEQUENCE>
			<CONDITIONAL>
				<TYPE>FLAG</TYPE>
				<VALUE>done_first_battle</VALUE>
				<IF_TRUE>
					<SEQUENCE>
						<CLEAR_FLAG>talked_to_mom_after_intro</CLEAR_FLAG>
						<SET_FLAG>has_not_talked_to_mom_after_first_battle</SET_FLAG>
						<END></END>
					</SEQUENCE>
				</IF_TRUE>
				<IF_FALSE><SEQUENCE><END></END></SEQUENCE></IF_FALSE>
			</CONDITIONAL>

			<CONDITIONAL>
				<TYPE>FLAG</TYPE>
				<VALUE>talked_to_mom_after_first_battle</VALUE>
				<IF_TRUE>
					<SEQUENCE>
						<CLEAR_FLAG>has_not_talked_to_mom_after_first_battle</CLEAR_FLAG>
						<END></END>
					</SEQUENCE>
				</IF_TRUE>
				<IF_FALSE><SEQUENCE><END></END></SEQUENCE></IF_FALSE>
			</CONDITIONAL>
			<END></END>
		</SEQUENCE>
	</EVENT_map_setup>

	<!-- =========================================================================================== -->
	<!-- NPCS -->
	<!-- =========================================================================================== -->	

	<EVENT_talk_lady>
		<SEQUENCE>
			<CONDITIONAL>
				<TYPE>FLAG</TYPE>
				<VALUE>picked_ball</VALUE>
				<IF_TRUE>
					<SEQUENCE>
						<CONDITIONAL>
							<TYPE>FLAG</TYPE>
							<VALUE>town_lady_gave_balls</VALUE>
							<IF_TRUE>
								<SEQUENCE>
									<DIALOG>
										<SPEAKER>Lady</SPEAKER>
										<TEXT>Be careful out there!   [end]</TEXT>
									</DIALOG>
									<END></END>
								</SEQUENCE>
							</IF_TRUE>
							<IF_FALSE>
								<SEQUENCE>
									<DIALOG>
										<SPEAKER>Lady</SPEAKER>
										<TEXT>Oh, [delay 4]are you on your way to the city? [halt]Take these fresh balls, [delay 7]maybe you'll catch something out there!   [end]</TEXT>
									</DIALOG>
									<GIVE_ITEM>Pokeball</GIVE_ITEM>
									<GIVE_ITEM>Pokeball</GIVE_ITEM>
									<GIVE_ITEM>Pokeball</GIVE_ITEM>
									<SET_FLAG>town_lady_gave_balls</SET_FLAG>
									<DELAY>8</DELAY>
									<DIALOG>
										<SPEAKER></SPEAKER>
										<TEXT>You got 3 Dikéballs!   [end]</TEXT>
									</DIALOG>
									<END></END>
								</SEQUENCE>
							</IF_FALSE>
						</CONDITIONAL>
						<END></END>
					</SEQUENCE>
				</IF_TRUE>
				<IF_FALSE>
					<SEQUENCE>
						<DIALOG>
							<SPEAKER>Lady</SPEAKER>
							<TEXT>I saw Prof. Oak creeping in the bushes to the west.   [end]</TEXT>
						</DIALOG>
						<END></END>
					</SEQUENCE>
				</IF_FALSE>
			</CONDITIONAL>
			<END></END>
		</SEQUENCE>
	</EVENT_talk_lady>

	<EVENT_talk_big_man>
		<SEQUENCE>
			<DIALOG>
				<SPEAKER>Big Man</SPEAKER>
				<TEXT>I'm a [delay 6]big [delay 6]man with b[delay 4]i[delay 4]g[delay 4] Dikéballs!   [end]</TEXT>
			</DIALOG>
		</SEQUENCE>
	</EVENT_talk_big_man>


	<!-- =========================================================================================== -->
	<!-- OBJECTS -->
	<!-- =========================================================================================== -->	

	<EVENT_sign_town_center>
		<SEQUENCE>
			<DIALOG>
				<SPEAKER></SPEAKER>
				<TEXT>NEW BARK TOWN:[halt] The Town Where the Winds of a New Beginning Blow   [end]</TEXT>
			</DIALOG>
			<END></END>
		</SEQUENCE>
	</EVENT_sign_town_center>

	<EVENT_sign_players_house>
		<SEQUENCE>
			<DIALOG>
				<SPEAKER> </SPEAKER>
				<TEXT>Your House   [end]</TEXT>
			</DIALOG>
			<END></END>
		</SEQUENCE>
	</EVENT_sign_players_house>

	<EVENT_sign_profs_lab>
		<SEQUENCE>
			<DIALOG>
				<SPEAKER> </SPEAKER>
				<TEXT>Oak Dikémon Lab   [end]</TEXT>
			</DIALOG>
			<END></END>
		</SEQUENCE>
	</EVENT_sign_profs_lab>

	<EVENT_sign_profs_house>
		<SEQUENCE>
			<DIALOG>
				<SPEAKER> </SPEAKER>
				<TEXT>Oak's House   [end]</TEXT>
			</DIALOG>
			<END></END>
		</SEQUENCE>
	</EVENT_sign_profs_house>
</EVENTS>