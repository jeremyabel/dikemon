<?xml version="1.0" encoding="UTF-8"?>
<EVENTS>
	
	<!-- Remove Dead Guide Guy NPC if the player has not completed his tutorial -->
	<EVENT_map_setup>
		<SEQUENCE>
			<CONDITIONAL>
				<TYPE>FLAG</TYPE>
				<VALUE>finished_guide_guy_tutorial</VALUE>
				<IF_TRUE><SEQUENCE><END></END></SEQUENCE></IF_TRUE>
				<IF_FALSE>
					<SEQUENCE>
						<REMOVE_NPC>Guide Guy</REMOVE_NPC>
						<END></END>
					</SEQUENCE>
				</IF_FALSE>
			</CONDITIONAL>
			<END></END>
		</SEQUENCE>
	</EVENT_map_setup>
	
